<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/size_16dp"
    android:paddingEnd="@dimen/size_24dp"
    android:paddingRight="@dimen/size_24dp"
    android:paddingBottom="@dimen/size_16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/size_24dp"
        android:layout_height="@dimen/size_24dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/size_24dp"
        android:layout_marginLeft="@dimen/size_24dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/size_24dp"
        android:layout_marginLeft="@dimen/size_24dp"
        android:layout_marginEnd="@dimen/size_8dp"
        android:layout_marginRight="@dimen/size_8dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/rb_checked"
        android:layout_width="@dimen/size_24dp"
        android:layout_height="@dimen/size_24dp"
        android:button="@drawable/choose_anima_type_radio_btn_shape"
        android:checked="true" />
</LinearLayout>