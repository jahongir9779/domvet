<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/size_16dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_dialog_white"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:textColor="@color/black"
        android:fontFamily="@font/gilroy_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_24dp"
        android:layout_marginTop="@dimen/size_8dp"
        android:layout_marginStart="@dimen/size_24dp"
        android:layout_marginBottom="@dimen/size_24dp" />

    <View
        android:id="@+id/spliterator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
       />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_single_chose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="3"
        tools:listitem="@layout/bottom_sheet_dialog_list_row" />

</LinearLayout>
